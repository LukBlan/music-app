<h1><%= @album.title %></h1>

<p><%= @album.year %></p>

<h2>Tracks</h2>

<% @tracks.each do |track| %>
  <ul>
    <li><a href="<%= track_url(track) %>"><%= track.title %></a></li>
  </ul>
<% end %>

<%= show_if_current_user_is_admin do %>
  <a href="<%= new_album_track_url(@album) %>">New</a>
<% end %>
